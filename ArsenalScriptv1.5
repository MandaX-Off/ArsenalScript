-- Botón Discord
local button = Instance.new("TextButton")
button.Size = UDim2.new(0.6, 0, 0, 40)
button.Position = UDim2.new(0.2, 0, 0, 130)
button.BackgroundColor3 = Color3.fromRGB(114, 137, 218) -- Color morado de Discord
button.Text = "💬 Unirse al Discord"
button.TextColor3 = Color3.new(1, 1, 1)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 20
button.Parent = frame

-- Link de Discord
local discordLink = "https://discord.gg/9Yj55zUZHb"

-- Acción del botón
button.MouseButton1Click:Connect(function()
    if setclipboard then
        setclipboard(discordLink)
        pcall(function()
            game.StarterGui:SetCore("SendNotification", {
                Title = "MandaX",
                Text = "Link copiado al portapapeles.",
                Duration = 5
            })
        end)
    else
        warn("Este ejecutor no soporta copiar al portapapeles.")
    end
end)
